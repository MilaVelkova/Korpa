@model IEnumerable<Domain.Domain.Delivery_orders>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center">My orders</h1>

<div class="row justify-content-center">

    @foreach (var item in Model)
    {
        <div class="col-12">
            <div class="card mb-3">
                <div class="row g-0">
                    <div class="col-md-4">
                        <div class="card-body">
                            <p>@item.Id</p>
                        </div>
                       
                    </div>
                    <div class="col-md-3">
                        <div class="card-body">
                            <h5 class="card-title ">Address: @item.Address</h5>
                            

                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card-body">
                            <h5 class="card-title ">Number of products: @item.FoodInOrders.Sum(x=>x.Quantity)</h5>


                        </div>
                    </div>
                    <div class="col-2 d-flex d-flex align-items-center justify-content-center">
                        <a asp-action="Details" asp-route-id="@item.Id"  class="btn btn-success">View order</a>


                    </div>
                </div>
            </div>

        </div>
    }
</div>
