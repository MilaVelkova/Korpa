
@model List<Domain.Integration.Cars>


<div class="container-fluid fullscreen-cars pt-4">

    @for (int i = 0; i < Model.Count(); i++)
    {
        var item = Model[i];

        if (i % 3 == 0)
        {
           @: <div class="row mt-3">
        }

        <div class="col-md-3 d-flex justify-content-center">

            <div class="card">
                <img class="card-img-top" src="@item.CarImage" alt="Car Image" style="height: 15rem">
                <div class="card-body">
                    <h5 class="card-title">@item.CarModel</h5>
                    <p class="card-text">@item.CarManufacturer</p>
                </div>

                
            </div>

        </div>

        @if (i % 3 == 2 || i == Model.Count - 1)
        {
            @: </div>
        }

    }
</div>
