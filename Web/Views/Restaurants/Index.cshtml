@model IEnumerable<Domain.Domain.Restaurants>

@{
    ViewData["Title"] = "Index";
}

<h1>Restaurants</h1>

<p>
    @*<a asp-action="Create">Create New</a>*@
</p>
<div class="row">


@foreach(var item in Model)
{
        <div class="col-3 d-flex justify-content-center mb-2">
            <div class="card" style="width: 18rem;">
                <img src="@item.Image" class="card-img-top" alt="..." style="height:15rem">
                <div class="card-body">
                    <h5 class="card-title text-center">@item.Name</h5>
                    <a asp-action="Menu" asp-route-id="@item.Id" class="btn btn-success w-100">Menu</a>
                </div>
            </div>
    </div>
    
}
</div>
