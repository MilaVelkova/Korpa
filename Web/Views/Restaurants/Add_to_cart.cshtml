@model Domain.Domain.FoodInShoppingCart


<div class="row d-flex justify-content-center">
    <div class="col-6">
        <h1>Add @Model.Food_Items.Name to Shopping cart</h1>
        <form asp-action="AddToCartConfirmed">
            <input type="hidden" asp-for="RestaurantId" />
            <input type="hidden" asp-for="Food_ItemsId" />
            

            <div class="form-group">
                <label asp-for="Quantity"></label>
                <input asp-for="Quantity" value="1" min="1" max="100" class="form-control" />
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Add To Cart"  class="btn btn-success" />
            </div>
        </form>
    </div>
</div>